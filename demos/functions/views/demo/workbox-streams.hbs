<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <ol>
          <li>Open DevTools</li>
          <li>Go to the Console</li>
          <li>
            Click this button to request a streamed response composed of multiple sources:<br/>
            <button class="make-streams-request btn btn-outline-primary">Request Streamed Response</button>
          </li>
          <li>Checkout the logs for info on how the streamed response was generated.</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<script>
  const makeRequestBtn = document.querySelector('.make-streams-request');

  navigator.serviceWorker.register('/demo/workbox-streams/sw.js').then(() => {
    makeRequestBtn.addEventListener('click', () => {
      fetch('streamedResponse'))
        .then((response) => response.text())
        .then((responseText) => {
          console.log(`Final response's body: ${responseText}`);
        });
    });
  });
</script>
